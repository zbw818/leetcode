/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        ListNode* tem;
        ListNode* right=head;
        ListNode* left=NULL;
        while(right){
            
            tem=right->next;
            right->next=left;
            left=right;
            right=tem;
        }
        return left;
    }
};
